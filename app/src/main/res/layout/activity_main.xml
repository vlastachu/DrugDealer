<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:src="@mipmap/stock_vector_thin_medical_line_health"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:scaleType="centerCrop"

        />
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        >
        <LinearLayout
            android:id="@+id/categories_button"
            android:orientation="vertical"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:background="@mipmap/card_shadow"
            >
            <ImageView
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_web_black_48dp"
                android:tint="#d34"/>
            <TextView
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Категории"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <LinearLayout
            android:id="@+id/maps_button"
            android:orientation="vertical"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:background="@mipmap/card_shadow">
            <ImageView
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_add_location_black_48dp"
                android:tint="#d34"/>
            <TextView
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Карта"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <LinearLayout
            android:id="@+id/favs_button"
            android:orientation="vertical"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:background="@mipmap/card_shadow">
            <ImageView
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_favorite_border_black_48dp"
                android:tint="#d34"/>
            <TextView
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Избранное"/>
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"/>
</LinearLayout>
</FrameLayout>